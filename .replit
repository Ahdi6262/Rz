modules = ["rust", "nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["flutter"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "React Frontend Server"

[[workflows.workflow]]
name = "React Frontend Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd . && npx webpack serve --mode development --open --host 0.0.0.0 --port 5000"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "cd frontend && flutter pub get && flutter run -d web-server --web-port=5000 --web-hostname=0.0.0.0"]

[[ports]]
localPort = 5000
externalPort = 80
